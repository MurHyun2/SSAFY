package com.ssafy.ws.step1;

import java.util.Scanner;

public class EvenSum {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		int num = sc.nextInt();
		int ans = 0;

		for(int i = 1; i <= num; i++) {
			if(int i % 2 == 0)
				ans += i;
		}
		System.out.println(ans);
		// abc test ^^
		
	}

}
